<BorderPane fx:id="rootPane1" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dsl.form.navigation.controllers.Page1Controller">
    <fx:define>
        <fx:include source="page2.fxml" fx:id="page2"/>
        <fx:include source="page3.fxml" fx:id="page3"/>
    </fx:define>
    <center>
        <MigPane layout="ins 10, wrap" cols="[]10[]10[]10[]10[]">
            <Label>Page 1</Label>
            <Button onAction="#back">Back</Button>
            <Button onAction="#next">Next</Button>
            <Button onAction="#jumpToPage3">Jump to Page 3</Button>
            <Button onAction="#showHistory">Show history</Button>
        </MigPane>
    </center>
</BorderPane>
